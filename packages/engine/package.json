{
  "name": "@agentloop/engine",
  "version": "0.1.0",
  "type": "module",
  "main": "./src/index.ts",
  "bin": {
    "agentloop-engine": "./src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch run src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@agentloop/core": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "bun-types": "latest"
  }
}
