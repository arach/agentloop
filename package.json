{
  "name": "agentloop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "engine": "bun run --cwd packages/engine start",
    "tui": "bun run --cwd packages/tui start",
    "build": "bun run --filter '*' build",
    "typecheck": "bun run --filter '*' typecheck",
    "clean": "rm -rf packages/*/dist packages/*/.turbo node_modules"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "bun-types": "latest"
  }
}
